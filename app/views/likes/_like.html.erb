<div class="like-link" id="like-link-<%= picturepost.id %>">
  <% if current_user.likes.find_by(picturepost_id: picturepost.id) %>
    <%= link_to unlike_path(picturepost.id), method: :delete, remote: true do%>
      <div class="like_button pb-2"><%= picturepost.likes.count %> likes â™¥ </div>
    <% end %>
  <% else %>
    <%= link_to like_path(picturepost.id), method: :post, remote: true do %>
      <div class="like_button SPRITE_downarrow pb-2"><%= picturepost.likes.count %> likes â™¡ </div>
    <% end %>
  <% end %>
</div>
