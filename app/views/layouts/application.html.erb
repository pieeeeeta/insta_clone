<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <%= link_to "INSTA CLONE", "/", class:"navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">           
          <% if user_signed_in?%>
            <li class="nav-item">
            <%= link_to "News", pictureposts_path, class: "nav-link" %>
            </li> 
            <li class="nav-item">
              <%= link_to "Mypage", user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link mr-5" %>
            </li>
          <% end %>
          
          <%= form_with url:'/pictureposts/search', method: :get, class: "form-inline my-2 my-lg-0", local: true do |f|%>
            <%= f.text_field :search, class:"form-control mr-sm-2" %>
            <%= f.submit 'Search', class:"btn btn-outline-secondary my-2 my-sm-0" %>
          <% end %>
          
        </ul>
      </div>
    </nav> 

    <%= yield %>


    <footer>
      <div class="row justify-content-center">
        <% if user_signed_in? %>
          <%= link_to "写真を投稿する", new_picturepost_path, class: "btn btn-outline-light" %>
        <% end %>
        <hr class="socket">
        &copy; Insta Clone
      </div>
    </footer>


    
  </body>
</html>

